<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%>
  <body>
    <!-- Navbar -->
    <%- include('partials/nav'); -%>
    <div class="container">
      <br>
      <div class="row justify-content-center">
        <div class="col-12">
          <!-- Stock General Data -->
          <section id="infoStockData">
            <div class="card border-dark" style="height:280px;">
              <div style="height:120px"></div>
              <div class="d-flex justify-content-center align-middle">
                <div class="row">
                  <div class="spinner-grow text-dark" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-8 pt-3">
          <!-- Chart: Time Series-->
          <section class="pb-1" id="chartTimeSeries">
            <div class="card border-primary" style="height:480px;">
              <div style="height:200px"></div>
              <div class="d-flex justify-content-center align-middle">
                <div class="row">
                  <div class="spinner-grow text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
        <div class="col-4 pt-3">
          <!-- Account Details and Buy/Sell Options -->
          <section id="transactionBuySell">
            <div class="card" style="height:480px; border-color: #6610f2!important;">
              <div style="height:200px"></div>
              <div class="d-flex justify-content-center align-middle">
                <div class="spinner-grow" style="color: #6610f2!important" role="status">
                  <span class="sr-only">Loading...</span>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
      <!-- News on stock market -->
      <div class="row">
        <div class="col-8 pt-3">
          <section id="listNews">
            <div class="card border-warning" style="height:200px; width:100%">
              <div style="height:80px"></div>
              <div class="d-flex justify-content-center align-middle">
                <div class="row">
                  <div class="spinner-grow text-warning" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
      <%- include('partials/footer'); -%>
    </div>
    
    <!-- ChartJS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script type="module" src="/javascripts/page/stock.js"></script>
  </body>
</html>